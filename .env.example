# Database Configuration
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=aidungeonmaster
POSTGRES_USER=dmuser
POSTGRES_PASSWORD=change_this_password

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# Backend Configuration
NODE_ENV=development
PORT=4000
FRONTEND_URL=http://localhost:3000

# LLM Provider API Keys (configure the ones you want to use)
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
XAI_API_KEY=
GOOGLE_API_KEY=

# Local LLM (unified)
# LOCAL_LLM_API options: ollama | openai | localai | openai-compatible | llamacpp
LOCAL_LLM_BASE_URL=http://localhost:11434
LOCAL_LLM_API=ollama

# LLM Configuration
DEFAULT_LLM_PROVIDER=openai
DEFAULT_MODEL=gpt-4-turbo-preview
FALLBACK_PROVIDER=anthropic
FALLBACK_MODEL=claude-3-sonnet-20240229

# Task-specific model overrides (optional)
# These can be set to any provider's model name; ensure it matches the selected provider
NARRATIVE_MODEL=gpt-4.1-mini
EXTRACT_MODEL=gpt-4.1-nano
FAST_MODEL=gpt-4.1-nano
NPC_MODEL=gpt-4.1-nano
ENCOUNTER_MODEL=gpt-4.1-nano
LOCATION_MODEL=gpt-4.1-nano
SUMMARY_MODEL=gpt-4.1-nano

# Task-specific provider overrides (optional)
# If set, the task will use this provider instead of DEFAULT_LLM_PROVIDER
NARRATIVE_PROVIDER=
EXTRACT_PROVIDER=
NPC_PROVIDER=
ENCOUNTER_PROVIDER=
LOCATION_PROVIDER=
SUMMARY_PROVIDER=

# Provider-specific default models (optional)
# If set, these override DEFAULT_MODEL/FALLBACK_MODEL for respective providers
OPENAI_DEFAULT_MODEL=gpt-4-turbo-preview
ANTHROPIC_DEFAULT_MODEL=claude-3-7-sonnet-20250219
GOOGLE_DEFAULT_MODEL=gemini-pro
XAI_DEFAULT_MODEL=grok-beta
OLLAMA_DEFAULT_MODEL=llama2
LOCALAI_DEFAULT_MODEL=gpt-3.5-turbo

# Mock provider (for local dev/testing only)
USE_MOCK_PROVIDER=false

# Rate Limiting
MAX_REQUESTS_PER_MINUTE=60
REQUEST_QUEUE_TIMEOUT=30000
MAX_TOKENS_PER_REQUEST=4000

# Session Configuration
SESSION_TIMEOUT_HOURS=24
AUTOSAVE_INTERVAL_SECONDS=60
MAX_SAVE_SLOTS=10

# JWT Configuration
JWT_SECRET=change_this_secret_key
JWT_EXPIRES_IN=7d

# CORS
CORS_ORIGIN=http://localhost:3000

# Text-to-Speech (Narrator Voice)
# Enable TTS narration and choose provider
TTS_ENABLED=false
# Provider can be 'elevenlabs', 'http' (generic self-hosted endpoint), or 'xtts'
TTS_PROVIDER=

# ElevenLabs settings
ELEVENLABS_API_KEY=
ELEVENLABS_VOICE_ID=21m00Tcm4TlvDq8ikWAM
ELEVENLABS_MODEL_ID=eleven_multilingual_v2

# XTTS or Generic HTTP TTS endpoint (expects POST { text } and returns audio/mpeg bytes)
TTS_HTTP_URL=

# Ambience / SFX (Background audio)
# Enable ambience generation (loopable music beds) and optional short SFX.
AMBIENCE_ENABLED=false
# Provider can be 'elevenlabs' or 'http'
AMBIENCE_PROVIDER=
# Optional: generic HTTP endpoint for ambience (POST { text, duration_seconds, kind })
AMBIENCE_HTTP_URL=
# Default durations (seconds)
AMBIENCE_DURATION_SECONDS=45
AMBIENCE_SFX_DURATION_SECONDS=6
# ElevenLabs SFX model override (if needed)
ELEVENLABS_SFX_MODEL_ID=
